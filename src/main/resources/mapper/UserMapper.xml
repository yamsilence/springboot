<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.epoint.dao.UserMapper">
    <resultMap id="BaseResultMap" type="com.epoint.entity.User">
        <result column="id" javaType="INTEGER" property="id"/>
        <result column="userName" javaType="VARCHAR" property="userName"/>
        <result column="passWord" javaType="VARCHAR" property="passWord"/>
        <result column="realName" javaType="VARCHAR" property="realName"/>
    </resultMap>
    <select id="sel" resultMap="BaseResultMap" parameterType="Integer">
        select * from user where id = #{id}
    </select>
</mapper>